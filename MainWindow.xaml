<Window x:Class="StarRuptureSaveFixer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:StarRuptureSaveFixer.Views"
        Title="Star Rupture Save File Manager" Height="850" Width="950"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <!-- Converters are defined in App.xaml -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Star Rupture Save File Manager"
                               FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="By AlienX"
                               FontSize="12"
                               Foreground="Gray"/>
                    <TextBlock FontSize="10">
                        <Hyperlink NavigateUri="https://StarRupture-Utilities.com"
                                   RequestNavigate="Hyperlink_RequestNavigate"
                                   Foreground="DodgerBlue">
                            Visit StarRupture-Utilities.com for more
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>

                <!-- Update Available Button -->
                <Button Grid.Column="1"
                        Content="Update Available!"
                        Click="UpdateButton_Click"
                        Background="#FF9800"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="15,8"
                        Cursor="Hand"
                        Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Save Browser">
                <views:SaveBrowserView DataContext="{Binding SaveBrowser}"/>
            </TabItem>
            <TabItem Header="Session Manager">
                <views:SessionManagerView DataContext="{Binding SessionManager}"/>
            </TabItem>
            <TabItem Header="FTP Upload">
                <views:FtpUploadView DataContext="{Binding FtpUpload}" Loaded="FtpUploadView_Loaded"/>
            </TabItem>
            <TabItem Header="FTP Download">
                <views:FtpDownloadView DataContext="{Binding FtpDownload}"/>
            </TabItem>
            <TabItem Header="Settings">
                <views:SettingsView DataContext="{Binding Settings}"/>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
