<Window x:Class="StarRuptureSaveFixer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Star Rupture Save File Fixer" Height="812" Width="700"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Star Rupture Save File Fixer"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="By AlienX"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Foreground="Gray"/>
            <TextBlock HorizontalAlignment="Center" FontSize="10">
                <Hyperlink NavigateUri="https://StarRupture-Utilities.com"
                           RequestNavigate="Hyperlink_RequestNavigate"
                           Foreground="DodgerBlue">
                    Visit StarRupture-Utilities.com for more
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- File Selection -->
        <GroupBox Grid.Row="1" Header="Save File" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="FilePathTextBox"
                         Grid.Column="0"
                         VerticalContentAlignment="Center"
                         Padding="5"
                         IsReadOnly="True"
                         Background="#F5F5F5"/>
                <Button x:Name="BrowseButton"
                        Grid.Column="1"
                        Content="Browse..."
                        Click="BrowseButton_Click"/>
            </Grid>
        </GroupBox>

        <!-- Fix Options -->
        <GroupBox Grid.Row="2" Header="Fix Options" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <RadioButton x:Name="FixDronesRadio"
                             Content="Fix Drones (Remove drones with invalid targets)"
                             GroupName="FixType"
                             IsChecked="True"/>
                <RadioButton x:Name="RemoveDronesRadio"
                             Content="Remove All Drones"
                             GroupName="FixType"/>
            </StackPanel>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button x:Name="ProcessButton"
                    Content="Process Save File"
                    Click="ProcessButton_Click"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    MinWidth="150"/>
        </StackPanel>

        <!-- Log Output -->
        <GroupBox Grid.Row="4" Header="Log" Padding="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Background="#1E1E1E"
                         Foreground="#D4D4D4"
                         FontFamily="Consolas"
                         FontSize="11"
                         Padding="5"
                         BorderThickness="0"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Footer -->
        <TextBlock Grid.Row="5"
                   Text="Star Rupture Save File Fixer - Making your saves safe again!"
                   FontSize="10"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
