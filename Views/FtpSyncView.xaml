<UserControl x:Class="StarRuptureSaveFixer.Views.FtpSyncView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Padding" Value="10,5"/>
      <Setter Property="Margin" Value="5"/>
     <Setter Property="MinWidth" Value="100"/>
  <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="Button" x:Key="PrimaryButton">
      <Setter Property="Padding" Value="15,8"/>
         <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="150"/>
   <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="TextBox" x:Key="FieldTextBox">
     <Setter Property="Padding" Value="5"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
     <Style TargetType="PasswordBox" x:Key="FieldPasswordBox">
            <Setter Property="Padding" Value="5"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
     </Style>
    </UserControl.Resources>

 <Grid Margin="10">
        <Grid.RowDefinitions>
       <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

 <!-- FTP Settings (Shared) -->
        <GroupBox Grid.Row="0" Header="FTP Server Settings" Padding="15" Margin="0,0,0,15">
     <Grid>
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="Auto"/>
         <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
    <ColumnDefinition Width="80"/>
  <ColumnDefinition Width="Auto"/>
<ColumnDefinition Width="200"/>
     </Grid.ColumnDefinitions>
         <Grid.RowDefinitions>
    <RowDefinition Height="Auto"/>
     <RowDefinition Height="Auto"/>
         <RowDefinition Height="Auto"/>
         <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
     <RowDefinition Height="Auto"/>
   </Grid.RowDefinitions>

      <!-- Host and Port and Protocol -->
     <TextBlock Grid.Row="0" Grid.Column="0" Text="Host:" VerticalAlignment="Center" Margin="0,0,10,10"/>
 <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}"
        Style="{StaticResource FieldTextBox}" Margin="0,0,15,10"/>
      <TextBlock Grid.Row="0" Grid.Column="2" Text="Port:" VerticalAlignment="Center" Margin="0,0,10,10"/>
       <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding Port}"
     Style="{StaticResource FieldTextBox}" Margin="0,0,15,10"/>
<TextBlock Grid.Row="0" Grid.Column="4" Text="Protocol:" VerticalAlignment="Center" Margin="0,0,10,10"/>
            <ComboBox Grid.Row="0" Grid.Column="5" 
   SelectedIndex="{Binding Protocol, Converter={StaticResource EnumToIndexConverter}}"
          Padding="5" Margin="0,0,0,10">
<ComboBoxItem Content="FTP (port 21)" Tag="0"/>
   <ComboBoxItem Content="FTPS (FTP over TLS - port 21)" Tag="1"/>
          <ComboBoxItem Content="SFTP (SSH File Transfer - port 22)" Tag="2"/>
    </ComboBox>

      <!-- Username -->
     <TextBlock Grid.Row="1" Grid.Column="0" Text="Username:" VerticalAlignment="Center" Margin="0,0,10,10"/>
   <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5"
  Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
   Style="{StaticResource FieldTextBox}" Margin="0,0,0,10"/>

      <!-- Password -->
      <TextBlock Grid.Row="2" Grid.Column="0" Text="Password:" VerticalAlignment="Center" Margin="0,0,10,10"/>
    <PasswordBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5"
   x:Name="PasswordBox"
    Style="{StaticResource FieldPasswordBox}" Margin="0,0,0,10"
  PasswordChanged="PasswordBox_PasswordChanged"/>

   <!-- Remote Path with Browse Button -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Remote Path:" VerticalAlignment="Center" Margin="0,0,10,10"/>
 <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="5" Margin="0,0,0,10">
       <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
    <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
           <TextBox Grid.Column="0"
    Text="{Binding RemotePath, UpdateSourceTrigger=PropertyChanged}"
      Style="{StaticResource FieldTextBox}" IsReadOnly="True"/>
         <Button Grid.Column="1" Content="Select Session"
    Command="{Binding BrowseRemoteCommand}"
  Style="{StaticResource ActionButton}"
         Background="#FF9800"
  Foreground="White"
     FontWeight="Bold"
Margin="5,0,0,0"/>
        </Grid>

     <!-- Options -->
     <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="6" Orientation="Horizontal" Margin="0,0,0,10"
    Visibility="Collapsed">
         <!-- FTP options removed - passive mode is now always used -->
   </StackPanel>

    <!-- Connection Test Status and Buttons -->
  <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="6" 
   Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="1" 
         Padding="10" CornerRadius="3">
        <Grid>
  <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
  <ColumnDefinition Width="Auto"/>
     </Grid.ColumnDefinitions>

         <!-- Status Text -->
    <TextBlock Grid.Column="0" 
      Text="{Binding ConnectionStatus}" 
     VerticalAlignment="Center"
    Foreground="{Binding ConnectionStatusColor}"/>

  <!-- Buttons -->
<StackPanel Grid.Column="1" Orientation="Horizontal">
          <Button Content="Test Connection" 
     Command="{Binding TestConnectionCommand}" 
       Style="{StaticResource ActionButton}"/>
        <Button Content="Cancel" 
  Command="{Binding CancelTestCommand}" 
    Style="{StaticResource ActionButton}"
    Background="#F44336" 
Foreground="White"
         Visibility="{Binding IsTesting, Converter={StaticResource BoolToVisibilityConverter}}"/>
     <Button Content="Save Settings" 
    Command="{Binding SaveSettingsCommand}" 
          Style="{StaticResource ActionButton}"/>
      </StackPanel>
   </Grid>
  </Border>
  </Grid>
  </GroupBox>

     <!-- Upload and Download Side by Side -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
     <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="10"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Upload Section (Left) -->
            <GroupBox Grid.Column="0" Header="Upload to Server" Padding="10">
     <Grid>
       <Grid.RowDefinitions>
    <RowDefinition Height="*"/>
             <RowDefinition Height="Auto"/>
   <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

    <!-- Info Panel -->
      <Border Grid.Row="0" Background="#FFF3E0" Padding="15" CornerRadius="3" VerticalAlignment="Top">
           <StackPanel>
        <TextBlock Text="Upload Instructions:" FontWeight="Bold" Margin="0,0,0,10"/>
   <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
      1. Configure FTP settings and select a remote session folder above
    </TextBlock>
          <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
         2. Click "Select File to Upload" to choose a local save file
   </TextBlock>
           <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
        3. Click "Upload to Server" to upload as AutoSave0.sav
           </TextBlock>
 <TextBlock TextWrapping="Wrap" Margin="0,5,0,10" Foreground="DarkOrange" FontStyle="Italic">
    WARNING: File will be uploaded to the selected remote session
          </TextBlock>
     <TextBlock Text="{Binding UploadFileInfo}" 
       TextWrapping="Wrap" 
FontWeight="Bold" 
 Foreground="{Binding UploadFileInfoColor}"/>
     </StackPanel>
  </Border>

     <!-- Upload Progress -->
     <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
       </Grid.RowDefinitions>
          <ProgressBar Grid.Row="0" Value="{Binding UploadProgress, Mode=OneWay}" 
        Minimum="0" Maximum="100" Height="25"/>
   <TextBlock Grid.Row="1" Text="{Binding UploadStatus}" 
         Margin="0,5,0,0" HorizontalAlignment="Center"/>
    </Grid>

            <!-- Upload Buttons -->
         <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
       <Button Content="Select File to Upload"
         Command="{Binding SelectUploadFileCommand}"
    Style="{StaticResource ActionButton}"
          Background="#FF9800"
           Foreground="White"
FontWeight="Bold"/>
            <Button Content="Upload to Server"
         Command="{Binding UploadCommand}"
 Style="{StaticResource PrimaryButton}"
          IsEnabled="{Binding CanUpload}"/>
 <Button Content="Cancel"
             Command="{Binding CancelUploadCommand}"
      Style="{StaticResource ActionButton}"
           Background="#F44336"
           Foreground="White"
    Visibility="{Binding IsUploading, Converter={StaticResource BoolToVisibilityConverter}}"/>
     </StackPanel>
      </Grid>
    </GroupBox>

         <!-- Download Section (Right) -->
            <GroupBox Grid.Column="2" Header="Download from Server" Padding="10">
 <Grid>
      <Grid.RowDefinitions>
    <RowDefinition Height="*"/>
       <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
   </Grid.RowDefinitions>

             <!-- Info Panel -->
      <Border Grid.Row="0" Background="#E3F2FD" Padding="15" CornerRadius="3" VerticalAlignment="Top">
  <StackPanel>
  <TextBlock Text="Download Instructions:" FontWeight="Bold" Margin="0,0,0,10"/>
  <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
        1. Configure FTP settings and select a remote session folder above
  </TextBlock>
     <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
  2. Click "Download Session" to download AutoSave0.sav
           </TextBlock>
   <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
              3. You'll be prompted to select which local save file to overwrite
 </TextBlock>
     <TextBlock TextWrapping="Wrap" Margin="0,5,0,10" Foreground="DarkOrange" FontStyle="Italic">
      WARNING: Remote session must contain AutoSave0.sav and AutoSave0.met
      </TextBlock>
       <TextBlock Text="{Binding RemoteSessionStatus}" 
       TextWrapping="Wrap" 
FontWeight="Bold" 
  Foreground="{Binding RemoteSessionStatusColor}"/>
       </StackPanel>
            </Border>

 <!-- Download Progress -->
         <Grid Grid.Row="1" Margin="0,10,0,0">
    <Grid.RowDefinitions>
           <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
   </Grid.RowDefinitions>
             <ProgressBar Grid.Row="0" Value="{Binding DownloadProgress, Mode=OneWay}" 
              Minimum="0" Maximum="100" Height="25"/>
              <TextBlock Grid.Row="1" Text="{Binding DownloadStatus}" 
 Margin="0,5,0,0" HorizontalAlignment="Center"/>
       </Grid>

          <!-- Download Buttons -->
           <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
  <Button Content="Download Session"
   Command="{Binding DownloadCommand}"
       Style="{StaticResource PrimaryButton}"
             IsEnabled="{Binding CanDownload}"/>
 <Button Content="Cancel"
           Command="{Binding CancelDownloadCommand}"
         Style="{StaticResource ActionButton}"
       Background="#F44336"
              Foreground="White"
    Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibilityConverter}}"/>
              </StackPanel>
        </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
