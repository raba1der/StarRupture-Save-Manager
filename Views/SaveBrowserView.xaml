<UserControl x:Class="StarRuptureSaveFixer.Views.SaveBrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:StarRuptureSaveFixer.ViewModels">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="Button" x:Key="FixButton">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Style="{StaticResource ActionButton}"/>
            <Button Content="Open in Explorer" Command="{Binding OpenInExplorerCommand}" Style="{StaticResource ActionButton}"/>
        </StackPanel>

        <!-- Sessions and Files -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sessions List -->
            <GroupBox Grid.Column="0" Header="Sessions" Margin="0,0,5,0">
                <ListBox ItemsSource="{Binding Sessions}"
                         SelectedItem="{Binding SelectedSession}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding DisplayName}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SaveCount, StringFormat='{}{0} save(s)'}"
                                           FontSize="11" Foreground="Gray"/>
                                <TextBlock Text="{Binding ModifiedDate, StringFormat='Modified: {0:yyyy-MM-dd HH:mm}'}"
                                           FontSize="10" Foreground="Gray"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>

            <!-- Save Files List -->
            <GroupBox Grid.Column="1" Header="Save Files" Margin="5,0,0,0">
                <ListView ItemsSource="{Binding SaveFilesInSession}"
                          SelectedItem="{Binding SelectedSaveFile}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="File Name" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FileName}"
                                                   Foreground="{Binding IsBackup, Converter={StaticResource BackupColorConverter}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Last Modified" Width="150"
                                            DisplayMemberBinding="{Binding LastModifiedDisplay}"/>
                            <GridViewColumn Header="Size" Width="80"
                                            DisplayMemberBinding="{Binding FileSizeDisplay}"/>
                            <GridViewColumn Header="Type" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding IsBackup, Converter={StaticResource BackupTypeConverter}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Grid>

        <!-- Fix Options -->
        <GroupBox Grid.Row="2" Header="Fix Options" Padding="10" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <ComboBox ItemsSource="{Binding Fixers}"
                              SelectedIndex="{Binding SelectedFixerIndex}"
                              MinWidth="300" Margin="0,0,10,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Fix Selected Save"
                        Command="{Binding FixSelectedCommand}"
                        Style="{StaticResource FixButton}"
                        MinWidth="150"
                        IsEnabled="{Binding CanFixSelected}"/>
            </Grid>
        </GroupBox>

        <!-- Log Output -->
        <GroupBox Grid.Row="4" Header="Log" Padding="5" Margin="0,10,0,0">
            <TextBox x:Name="LogTextBox"
                     Text="{Binding LogOutput, Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Background="#1E1E1E"
                     Foreground="#D4D4D4"
                     FontFamily="Consolas"
                     FontSize="11"
                     Padding="5"
                     BorderThickness="0"/>
        </GroupBox>
    </Grid>
</UserControl>
