<UserControl x:Class="StarRuptureSaveFixer.Views.SessionManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="Button" x:Key="DangerButton">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Style="{StaticResource ActionButton}"/>
        </StackPanel>

        <!-- Copy Between Sessions -->
        <GroupBox Grid.Row="2" Header="Copy Saves Between Sessions" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Source Session -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Source Session:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Sessions}"
                                  SelectedItem="{Binding SourceSession}"
                                  DisplayMemberPath="DisplayName"/>
                    </StackPanel>

                    <GroupBox Grid.Row="1" Header="Source Files">
                        <ListBox ItemsSource="{Binding SourceFiles}"
                                 SelectedItem="{Binding SelectedSourceFile}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="3">
                                        <TextBlock Text="{Binding FileName}" MinWidth="150"/>
                                        <TextBlock Text="{Binding FileSizeDisplay}" Foreground="Gray" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </GroupBox>
                </Grid>

                <!-- Copy Button -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
                    <Button Content="Copy -->"
                            Command="{Binding CopySaveCommand}"
                            Style="{StaticResource ActionButton}"
                            FontWeight="Bold"/>
                </StackPanel>

                <!-- Target Session -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Target Session:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Sessions}"
                                  SelectedItem="{Binding TargetSession}"
                                  DisplayMemberPath="DisplayName"/>
                    </StackPanel>

                    <GroupBox Grid.Row="1" Header="Target Files">
                        <ListBox ItemsSource="{Binding TargetFiles}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="3">
                                        <TextBlock Text="{Binding FileName}" MinWidth="150"/>
                                        <TextBlock Text="{Binding FileSizeDisplay}" Foreground="Gray" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </GroupBox>

                    <Button Grid.Row="2" Content="Delete Session"
                            Command="{Binding DeleteSessionCommand}"
                            Style="{StaticResource DangerButton}"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Status Bar -->
        <TextBlock Grid.Row="3" Text="{Binding StatusMessage}"
                   Margin="0,10,0,0" Foreground="Gray"/>
    </Grid>
</UserControl>
